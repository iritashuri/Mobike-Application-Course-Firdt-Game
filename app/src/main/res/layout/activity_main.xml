<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Activity_Main"
    android:background="@color/colorAcctive">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@android:color/background_dark"
        android:textSize="50sp"
        android:layout_marginTop="25dp"
        tools:layout_editor_absoluteY="319dp" />

    <Button
        android:id="@+id/Main_BTN_Start"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/start"
        tools:layout_editor_absoluteY="319dp"
        android:background="@drawable/my_button_bg"/>

    <Button
        android:id="@+id/Main_BTN_GoToTopTen"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/see_top_ten"
        tools:layout_editor_absoluteY="319dp"
        android:background="@drawable/my_button_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/disney_icons_48181" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/disney_icons_48182"
            android:contentDescription="TODO" />
    </LinearLayout>

</LinearLayout>